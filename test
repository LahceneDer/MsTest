version: '3.3'

services: 
  mysqldb:
    image: mysql/mysql-server
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: msdb
    ports:
      - 3306:3306
    volumes: 
      - db-config:/etc/mysql
      - db-data:/var/lib/mysql
      - ./db/backup/files/:/data_backup/data
  server:
    container_name: ms-server-container
    image: ms-server
    build:
      context: ./server
      dockerfile: Dockerfile
    depends_on:
      - mysqldb
    stdin_open: true
    tty: true
  client:
    container_name: ms-client-container
    image: ms-client
    build:
      context: ./client
      dockerfile: Dockerfile

volumes: 
  db-config:
  db-data: